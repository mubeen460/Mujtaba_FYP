@model IEnumerable<StudentManagement1.Student>

@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Select Students</h2>


 @using (@Html.BeginForm("AddStudents", "Teacher", FormMethod.Get))
    {
     @Html.AntiForgeryToken()
    @Html.ValidationSummary(true,""+ @ViewData["error"]+"");
        <table >
    <tr>
        <th>
           <span>Search By:</span>
        </th>
        <th> @Html.RadioButton("searchBy", "Name", true)Name</th>
        <th> @Html.RadioButton("searchBy", "Student_Id")Student Id</th>
        <th> @Html.RadioButton("searchBy", "Semester_No") Semester Name</th>
       </tr>
        </table> <br />

         @Html.TextBox("search") <input type="submit" value="search" />
       
    }
  

@using (Html.BeginForm("AddStudents", "Teacher", FormMethod.Post))
{
     @Html.Hidden("teachercourseid",ViewData["teachercourseid"])

<table cellspacing = "10">
    <tr>
        <th>
           Student Id
        </th>
        <th>
            First Name
        </th>
        <th>
           Sur Name
        </th>
        <th>
           Semester
        </th>
        <th>
            Select
        </th>
    </tr>

    @if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">
            No records match search criteria
        </td>
    </tr>
}
else
{
   
 <tbody>
        @Html.EditorForModel()
</tbody>
}

</table>
        <br /> <br />
    <input type="submit" value="Add selected Students" />
}