@model IEnumerable<StudentManagement1.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h2> Search </h2>

    @using (@Html.BeginForm("Index", "Course", FormMethod.Get))
    {
        <table >
    <tr>
        <th>
           <span>Search By:</span>
        </th>
        <th> @Html.RadioButton("searchBy", "Name", true) Course Name</th>
        <th> @Html.RadioButton("searchBy", "Course_Id") Course Id</th>
        <th> @Html.RadioButton("searchBy", "Degree_Name") Department Name</th>
       </tr>
        </table> <br />

         @Html.TextBox("search") <input type="submit" value="search" />
       
    }


<table cellspacing ="10">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credit_Hours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Degree.Degree_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semester.Semester_Name)
        </th>
         <th>Action</th>
    </tr>
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">
            No records match search criteria
        </td>
    </tr>
}
else
{

foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Credit_Hours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Degree.Degree_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semester.Semester_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Course_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Course_Id  })
        </td>
    </tr>
}
}
</table>
