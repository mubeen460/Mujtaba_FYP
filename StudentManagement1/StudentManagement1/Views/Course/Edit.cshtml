@model StudentManagement1.Course

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Course</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Course_Id)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Course_Id)
        </div>
         <div class="editor-field">
            @Html.HiddenFor(model => model.Course_Id)
        </div>

        <br />
        <br />

        <div class="editor-label">
            @Html.LabelFor(model => model.Course_Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Course_Name)
            @Html.ValidationMessageFor(model => model.Course_Name)
        </div>

        <br />
        <br />

        <div class="editor-label">
            @Html.LabelFor(model => model.Credit_Hours)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Credit_Hours)
            @Html.ValidationMessageFor(model => model.Credit_Hours)
        </div>

        <br />
        <br />

        <div class="editor-label">
            @Html.LabelFor(model => model.Degree.Degree_Id, "Degree")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Degree_Id", String.Empty)
            @Html.ValidationMessageFor(model => model.Degree_Id)
        </div>

        <br />
        <br />
         <div class="editor-label">
            @Html.LabelFor(model => model.Semester.Semester_Name, "Semester")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Semester_Id", String.Empty)
            @Html.ValidationMessageFor(model => model.Semester.Semester_Name)
        </div>

        <br />
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}