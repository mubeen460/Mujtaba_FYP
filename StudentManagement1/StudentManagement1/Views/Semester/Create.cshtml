@model StudentManagement1.Semester

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Semester</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Semester_Name)
        </div>
        <div class="editor-field">
             @Html.EditorFor(model => model.Semester_Name)
            @Html.ValidationMessageFor(model => model.Semester_Name)
        </div>
        <br />
        <br />

        <div class="editor-label">
            @Html.LabelFor(model => model.Degree_Id, "Degree")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Degree_Id", String.Empty)
            @Html.ValidationMessageFor(model => model.Degree_Id)
        </div>
        <br />
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
