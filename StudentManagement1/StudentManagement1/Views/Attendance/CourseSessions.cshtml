@model IEnumerable<StudentManagement1.TeacherCourse>
@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_TeacherLayout.phone.cshtml";
}

 <div class="header">    

            <h1 class="page-title">Courses</h1>
</div>

<br />          
     @* <ul class="breadcrumb">
            <li><a href="index.html">Home</a> <span class="divider">/</span></li>
            <li class="active">Users</li>
        </ul>*@

        <div class="container-fluid">
            <div class="row-fluid">
                              
<div class="well">
     @Html.Hidden("teacherid",ViewData["teacherid"])
    <table class="table">
      <thead>
        <tr>
         <th>
         @Html.DisplayNameFor(model => model.Course_Id)
        </th>
        <th>
         @Html.DisplayNameFor(model => model.Course.Course_Name)
        </th>
        <th>
         @Html.DisplayNameFor(model => model.Course.Credit_Hours)
        </th>
        <th>
             Session
        </th>
          @*<th style="width: 26px;"></th>*@
        </tr>
      </thead>
      <tbody>
          @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course_Id)
        </td>
        <td>
       
            @Html.DisplayFor(modelItem => item.Course.Course_Name)
        </td>
        <td>
       
            @Html.DisplayFor(modelItem => item.Course.Credit_Hours)
        </td>
        <td>
            @Html.ActionLink("Sessions", "Sessions","Attendance", new { id = item.Course_Id , teacherid = ViewData["teacherid"] } , null)
   
        </td>
    </tr>
}
        
      </tbody>
    </table>
</div>
            

                    
